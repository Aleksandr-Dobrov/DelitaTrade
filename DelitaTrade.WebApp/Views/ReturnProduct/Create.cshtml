@using DelitaTrade.Core.ViewModels;
@model ReturnedProductInputModel;

@{
    ViewData["Title"] = "Create Return Product";
    ViewData["DescriptionsSearchUrl"] = Url.Action("Descriptions", "Search", null, Url.ActionContext.HttpContext.Request.Scheme);
    ViewData["ProductSearchUrl"] = Url.Action("Products", "Search", null, Url.ActionContext.HttpContext.Request.Scheme);
}

<head>
    <link rel="stylesheet" href="~/css/search.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 main-box light-gray-80">
        <form asp-controller="ReturnProduct" asp-action="Create" method="post">
            <div>
                <div id="search" class="col-sm-6 mb-2">
                    <input asp-for="@Model.ProductName" class="form-label-add-edit" autocomplete="off" type="text" id="product-item-value" placeholder="Products..." value="@Model.ProductName" />
                    <span asp-validation-for="@Model.ProductName" class="text-danger"></span>
                    <ul id="product-result-list" class="search-list delita-shadow">
                    </ul>
                </div>
                <div class="mb-2">
                    <label asp-for="@Model.Unit" class="form-label-add-edit">Unit</label>
                    <input asp-for="@Model.Unit" id="product-unit-value" class="form-control" type="text" aria-required="true" readonly/>
                    <span asp-validation-for="@Model.Unit" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-2">
                <input asp-for="@Model.ReturnProtocolId" type="hidden" value="@Model.ReturnProtocolId" />
                <label asp-for="@Model.Quantity" class="form-label-add-edit">Quantity</label>
                <input asp-for="@Model.Quantity" class="form-control" type="number" aria-required="true" />
                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
            </div>
            <div class="col-sm-6 mb-2">
                <label asp-for="@Model.BestBefore" class="form-label-add-edit">Best before</label>
                <input asp-for="@Model.BestBefore" class="form-control" type="date" aria-required="true"/>
                <span asp-validation-for="@Model.BestBefore" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.Batch" class="form-label-add-edit">Batch</label>
                <input asp-for="@Model.Batch" class="form-control" rows="3"/>
                <span asp-validation-for="@Model.Batch" class="text-danger"></span>
            </div>
            <div class="col-sm-6 mb-2">
                <label asp-for="@Model.DescriptionCategoryId" class="form-label-add-edit">Return category</label>
                <select asp-for="@Model.DescriptionCategoryId" id="trader-input" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.DescriptionCategories, "Id", "Name"))">
                    <option value="">...</option>
                </select>
                <span asp-validation-for="@Model.DescriptionCategoryId" class="text-danger"></span>
            </div>
            <div id="search" class="col-sm-6 mb-2">
                <input asp-for="@Model.Description" class="form-label-add-edit" autocomplete="off" type="text" id="item-value" placeholder="Descriptions..." value="@Model.Description" />
                <input asp-for="@Model.DescriptionId" type="hidden" id="item-id" value="@Model.DescriptionId" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                <ul id="result-list" class="search-list delita-shadow">
                </ul>
            </div>
            <div class="mb-2">
                <button class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit">
                    <i class="fas fa-save"></i> Add
                </button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/ServerProvider.js"></script>
<script src="~/js/HtmlUtil.js"></script>
<script>
    const searchUrl = '@ViewData["DescriptionsSearchUrl"]';
    const productSearchUrl = '@ViewData["ProductSearchUrl"]';
</script>
<script src="~/js/ProductSearch/CreateReturnedProductDescriptionSearch.js"></script>
<script src="~/js/ProductSearch/CreateReturnProductProductSearch.js"></script>
<script src="~/js/search.js"></script>
<script src="~/js/ProductSearch/ProductSearch.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
