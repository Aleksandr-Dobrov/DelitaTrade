<UserControl x:Class="DelitaTrade.Components.ComponentsView.OptionsComponents.DescriptionCategoryManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DelitaTrade.Components.ComponentsView.OptionsComponents"
             xmlns:componentsviewmodel="clr-namespace:DelitaTrade.ViewModels.Controllers"
             d:DataContext="{d:DesignInstance Type=componentsviewmodel:DescriptionCategoryManagerController}"
             mc:Ignorable="d"      
             d:DesignWidth="300">
    
    <Border Height="auto"
            BorderThickness="2"
            BorderBrush="DarkGray"
            CornerRadius="2">    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="Description Category Manager" 
                           FontSize="14" 
                           Margin="5"
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <ComboBox Width="200" 
                              Height="22" 
                              Margin="5"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              IsEditable="False"
                              SelectedItem="{Binding SelectedDescriptionCategory}"
                              ItemsSource="{Binding DescriptionCategories}"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Button Content="Update" 
                            Width="60" 
                            Height="22" 
                            Margin="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding UpdateCommand}"/>
                </Grid>
                <Grid Grid.Column="2">
                    <Button Content="Remove" 
                            Width="60" 
                            Height="22" 
                            Margin="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding DeleteCommand}"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBox Width="200" 
                             Height="22" 
                             Margin="5"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Text="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Button Content="Add" 
                            Width="60" 
                            Height="22" 
                            Margin="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding AddCommand}"/>

                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
