<UserControl x:Class="DelitaTrade.Components.RetutnProtocolComponents.InitialInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:component="clr-namespace:DelitaTrade.Components"
             xmlns:local="clr-namespace:DelitaTrade.Components.RetutnProtocolComponents"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Company" FontSize="14" FontWeight="Medium" HorizontalAlignment="Center"/>
                <component:SearchBox Grid.Row="1" DataContext="{Binding SearchBox}">
                    
                </component:SearchBox>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <component:SearchBoxObject Grid.Row="1" DataContext="{Binding SearchBoxObject}">
                    
                </component:SearchBoxObject>            
            </Grid>
            <component:SearchBoxTextDeletable Grid.Row="2" DataContext="{Binding Trader}">

            </component:SearchBoxTextDeletable>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <component:SearchBoxTextNotDeletable Grid.Row="0" 
                                                 Width="100"
                                                 HorizontalAlignment="Right"
                                                 DataContext="{Binding ReturnProtocolDate}"/>
            <component:SearchBoxTextNotDeletable Grid.Row="1"
                                                 Width="150"
                                                 HorizontalAlignment="Right"
                                                 Margin="0 20 0 0"
                                                 DataContext="{Binding ReturnProtocolPayMethod}"/>
        </Grid>
    </Grid>
</UserControl>
