<UserControl x:Class="DelitaTrade.Components.ComponentsView.SearchBoxObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="150">
    <Grid>
        <ComboBox x:Name="SearchBoxObjectsDelita" IsEditable="True"
               IsTextSearchEnabled="True"
               Text="{Binding InputTextObject}"
               ItemsSource="{Binding CompanyObjects}"
               DisplayMemberPath="ObjectName"
                  PreviewTextInput="SearchBoxObjectsDelita_PreviewTextInput"/>
    </Grid>
</UserControl>
